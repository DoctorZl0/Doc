{
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "composer/composer": "2.2.*@dev",
        "composer/pcre": "^1.0",
        "erusev/parsedown": "^1.0",
        "phpstan/phpstan-symfony": "^1.1",
        "sensio/framework-extra-bundle": "^6.1",
        "symfony/console": "^5.2",
        "symfony/dotenv": "^5.2",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "^5.2",
        "symfony/mime": "^5.2",
        "symfony/monolog-bundle": "^3.7",
        "symfony/runtime": "5.4.*",
        "symfony/twig-bundle": "^5.2",
        "symfony/yaml": "^5.2",
        "twig/extra-bundle": "^3",
        "twig/twig": "^3"
    },
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": {
            "composer/composer": "source",
            "*": "dist"
        },
        "sort-packages": true,
        "platform": {
            "php": "8.0.5"
        },
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "phpstan": "phpstan"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        },
        "public-dir": "web"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4"
    }
}
